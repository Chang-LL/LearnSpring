<?xml version="1.0" encoding="UTF-8"?>
<!-- default-init-method: 当前框架下所有元素的默认初始化方法 -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="init"
       default-destroy-method="destroy">
    <bean id="simpleHello" class="Hello">
        <property name="message" value="Simple Hello">

        </property>
    </bean>
    <bean id="lazyHello" class="Hello" lazy-init="true">
        <property name="message" value="Lazy Hello">

        </property>
    </bean>
    <bean id="destructHello" class="Hello" destroy-method="destroy">
        <property name="message" value="Destruct Hello">

        </property>
    </bean>
    <bean id="initHello" class="Hello" init-method="init">
        <property name="message" value="Init Hello">

        </property>
    </bean>
</beans>